<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/nameOfRepo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descripionOfRepo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_below="@id/nameOfRepo"
            android:layout_margin="10dp"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_image_24"
         android:layout_alignParentLeft="true"
            android:layout_below="@id/descripionOfRepo"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/ownerOfRepo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descripionOfRepo"
            android:layout_toRightOf="@id/imageIcon"
            android:layout_margin="10dp"
            android:text="name"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_toLeftOf="@id/starsOfRepo"
            android:layout_below="@id/descripionOfRepo"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/starsOfRepo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descripionOfRepo"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="name"
            android:textColor="#FDC726"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>